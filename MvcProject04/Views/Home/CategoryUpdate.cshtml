@model Category
@{
    ViewBag.Title = "CategoryUpdate";
}

<h2>kategori Güncelleme</h2>


<form action="/Home/CategoryUpdate" method="post">
    @Html.HiddenFor(z => z.CategoryID)
    <div class="form-group">
        <label>CategoryName</label>
        @Html.TextBoxFor(z => z.CategoryName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Desctiption</label>
        @Html.TextAreaFor(z => z.Description, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

