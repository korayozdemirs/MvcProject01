@model  IEnumerable<Category>

@{
    ViewBag.Title = "CategoryList";
}

<h2>CategoryList</h2>

<a class="btn btn-success" href="/Home/CategoryAdd">Kategori Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.CategoryID</th>
                <td>@item.CategoryName</td>
                <td>@item.Description</td>
                <td>
                    <a class="btn btn-info btn-sm" href="/Home/CategoryUpdate/@item.CategoryID">Edit</a>
                    <a class="btn btn-warning btn-sm" href="/Home/CategoryDelete/@item.CategoryID">Delete</a>

                </td>
            </tr>
        }


    </tbody>
</table>
