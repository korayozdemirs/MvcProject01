@model Category
@{
    ViewBag.Title = "CategoryAdd";
}

<h2>Kategori Ekleme Sayfası</h2>

<form action="/Home/CategoryAdd" method="post">

    <div class="form-group">
        <label>CategoryName</label>
        @Html.TextBoxFor(z => z.CategoryName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Desctiption</label>
        @Html.TextAreaFor(z => z.Description, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

